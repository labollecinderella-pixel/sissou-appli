    <script>
        function openProfile() {
            console.log('Ouverture du profil');
        }

        function changeLanguage() {
            console.log('Changement de langue');
        }

        function selectSection(section) {
            console.log('Section sélectionnée:', section);
        }

        function selectGender(gender) {
            console.log('Genre sélectionné:', gender);
        }

        function openSearch() {
            window.open('https://trends.google.com/trends/', '_blank');
        }

        function openPseudos() {
            const pseudo = generateUniquePseudo();
            document.getElementById('pseudoDisplay').textContent = pseudo;
            document.getElementById('pseudoModal').classList.add('active');
        }

        function generateUniquePseudo() {
            const alphabets = {
                french: 'abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ',
                arabic: 'ابتثجحخدذرزسشصضطظعغفقكلمنهوي',
                russian: 'абвгдежзийклмнопрстуфхцчшщъыьэюя',
                chinese: '的一是不了人我在有他这为之大来以个中上们到说国和地也子时道出而要于就下得可你年生自会那后能对着事其里所去行过家十用发天如然作方成者多日都三小军二无同么经法当起与好看学进种将还分此心前面又定见只主没公从',
                hindi: 'अआइईउऊएऐओऔकखगघङचछजझञटठडढणतथदधनपफबभमयरलवशषसह'
            };

            const alphabetKeys = Object.keys(alphabets);
            const length = Math.floor(Math.random() * 3) + 8;
            let pseudo = '';
            let lastAlphabet = null;

            for (let i = 0; i < length; i++) {
                let availableAlphabets = alphabetKeys.filter(key => key !== lastAlphabet);
                let chosenAlphabet = availableAlphabets[Math.floor(Math.random() * availableAlphabets.length)];
                let letters = alphabets[chosenAlphabet];
                let randomLetter = letters[Math.floor(Math.random() * letters.length)];
                pseudo += randomLetter;
                lastAlphabet = chosenAlphabet;
            }

            return pseudo;
        }

        function closeModal() {
            document.getElementById('pseudoModal').classList.remove('active');
        }

        document.addEventListener('touchstart', function(){}, {passive: true});
    </script>
